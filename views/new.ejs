<% include ./partials/header %>

<br>

    <!-- multistep form -->
    <form id="msform">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Event Setup</li>
            <li>Event Info</li>
            <li>Contact Details</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
            <h2 class="fs-title">Create your Event</h2>
            <h3 class="fs-subtitle">Let's start!</h3>
            <input type="text" name="eventName" placeholder="Event Name" />
            <input type="password" name="location" placeholder="Location" />
            <input type="Date" class="form-control" id="inputDate" placeholder="01/01/2018">
            <input type="Time" class="form-control" id="inputTime" placeholder="03:30">
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Event Description</h2>
            <h3 class="fs-subtitle">Add a description of the event</h3>
            <textarea type="Description" class="form-control" id="inputDescription" placeholder="Type your event description here..."></textarea>
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Contact Details</h2>
            <h3 class="fs-subtitle">We will never give it away</h3>
            <input type="text" name="fname" placeholder="First Name" />
            <input type="text" name="lname" placeholder="Last Name" />
            <input type="text" name="phone" placeholder="Phone" />
            <input type="text" name="email" placeholder="Email"/>
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <input type="submit" name="submit" class="submit action-button" value="Submit" />
        </fieldset>
    </form>

    <% include ./partials/footer %>

