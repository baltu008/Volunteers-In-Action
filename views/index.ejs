<% include ./partials/head %>
    <% include ./partials/header %>
        <div class="container-hero">
            <div class='container'>
                <% if (error && error.length > 0){%>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% }; %>
                        <% if (success && success.length > 0){%>
                            <div class="alert alert-success" role="alert">
                                <%= success %>
                            </div>
                            <% }; %>
                                <% if (info && info.length > 0){%>
                                    <div class="alert alert-success" role="alert">
                                        <%= info %>
                                    </div>
                                    <% }; %>
            </div>
            <div class="nameContent text-center">
                <a href="#welcome" class="downPointing align-middle text-center btn">
                    <i class="fa fa-angle-double-down" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <div class="container-home">
            <div class="jumbotron jumbotron-home jumbotron-fluid">
                <h1 class="display-4" id="welcome">Welcome to Volunteers in Action!</h1>
                <p class="lead">We are here to help you meet your volunteering goals!</p>
                <div class="row">
                    <div class="card card-volHome col-lg-4 col-md-4 col-sm-10">
                        <img class="card-img-top" src="../assets/images/volunteer.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">Volunteer</h4>
                            <hr>
                            <p class="card-text">Find volunteer events near you to get started! Volunteer opportunities are endless and we're
                                here to help you find them!</p>
                            <a href="/events" class="btn btn-primary">Volunteer</a>
                        </div>
                    </div>
                    <div class="card col-lg-4 col-md-4 col-sm-10">
                        <img class="card-img-top" src="../assets/images/past.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">Past Events</h4>
                            <hr>
                            <p class="card-text">See past events that organizations and individuals have posted on our site. Admin can use this
                                for event ideas as well.</p>
                            <a href="/events" class="btn btn-primary">See Events</a>
                        </div>
                    </div>
                    <div class="card col-lg-4 col-md-4 col-sm-10">
                        <img class="card-img-top" src="../assets/images/signUp.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">Sign Up</h4>
                            <hr>
                            <p class="card-text">Need help with your company or around your local neighborhood? Sign up now to get started!</p>
                            <a href="/signup" class="btn btn-primary">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>





        <% include ./partials/footer %>