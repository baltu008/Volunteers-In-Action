<% include ../partials/head %>
    <% include ../partials/header %>
        <div class="container-volunteer">
            <div class="jumbotron jumbotron-home bg-dark col-12">
                <h1>Volunteer Opportunities</h1>
                <p class="lead">Check out available events around you!</p>
            </div>
        </div>
        <div class="container-events">
            <div class="row-12">
                <div class="col-lg-12">
                    <div class="row row-eventCard">
                        <%events.forEach(function(event){%>
                            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card" id="card-event">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= event.event_name %>
                                        </h5>
                                        <p class="location">
                                            Location:
                                            <%= event.location %>
                                        </p>
                                        <p class="date">
                                            Date:
                                            <%= event.date %>
                                        </p>
                                        <!-- Button trigger modal -->
                                        <a class="eventBtn">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong<%=event.id %>">More Info</button>
                                        </a>
                                        <% if (event.Volunteers.length >= event.volunteers_needed){%>
                                            <button type="button" class="btn btn-primary">Event is Full!</button>
                                            <%}else {%>
                                                <a href='/events/<%= event.id %>/volunteers/new' type="button" class="btn btn-primary">Sign Up!</a>
                                                <% }%>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="exampleModalLong<%=event.id %>" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <h5 class="card-title">
                                                    <%= event.event_name %>
                                                </h5>
                                                <p class="location">
                                                    Location:
                                                    <%= event.location %>
                                                </p>
                                                <p class="date">
                                                    Date:
                                                    <%= event.date %>
                                                </p>
                                                <p class="time">
                                                    Time:
                                                    <%= event.start_time %>
                                                </p>
                                                <p class="time">
                                                    Time:
                                                    <%= event.end_time %>
                                                </p>
                                                <p class="organizer">
                                                    Orazanizer:
                                                    <%= event.organizer %>
                                                </p>
                                                <p class="organizer">
                                                    Contact:
                                                    <%= event.contact%>
                                                </p>
                                                <p class="volunteers">
                                                    Volunteers Needed:
                                                    <%= event.volunteers_needed %>
                                                </p>
                                                <p class="details">
                                                    Info:
                                                    <%= event.description %>
                                                </p>
                                            </div>
                                            <div>
                                                <h3>List of volunteers</h3>
                                                <!-- loop through the volunteers arrays and display all -->
                                                <% event.Volunteers.forEach(function(volunteer){ %>
                                                    <h6>
                                                        <span>
                                                            <%=volunteer.first_name %>
                                                        </span>
                                                        <span>
                                                            <%=volunteer.last_name %>
                                                        </span>
                                                    </h6>
                                                    <% }) %>
                                            </div>
                                            <div>
                                                <!-- We want to hide edit buttion if the event does not belong to the current signed in user -->
                                                <% if (currentUser && currentUser.id === event.UserId){%>
                                                    <a href='/events/<%= event.id %>/edit'>Edit Event</a>
                                                    <br>
                                                    <%}%>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <!-- We want to complete the numbers of signup up volunteers to the number of spaces -->
                                            <% if (event.Volunteers.length >= event.volunteers_needed){%>
                                                <button type="button" class="btn btn-primary">Event is Full!</button>
                                                <%}else {%>
                                                    <a href='/events/<%= event.id %>/volunteers/new' type="button" class="btn btn-primary">Sign Up!</a>
                                                    <% }%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%})%>
                    </div>
                </div>
            </div>
        </div>


        <% include ../partials/footer %>