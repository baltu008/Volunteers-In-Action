<% include ../partials/head %>
    <% include ../partials/header %>
        <div class="container">
                <div class="container">
                        <% if (error && error.length > 0){%>
                             <div class="alert alert-danger" role="alert"><%= error %></div>
                         <% }; %>
                         <% if (success && success.length > 0){%>
                             <div class="alert alert-success" role="alert"><%= success %></div>
                         <% }; %>
                         <% if (info && info.length > 0){%>
                            <div class="alert alert-success" role="alert"><%= info %></div>
                        <% }; %>
                     </div>
            <div class="row row-jumbotron">
                <div class="jumbotron jumbotron-events bg-dark col-12">
                    <h1>Volunteer Opportunities</h1>
                    <p class="lead">Check out available events around you!</p>
                </div>
            </div>
        </div>
        <div class="container-events">
            <div class="row-12">
                <div class="col-lg-12">
                    <div class="row row-eventCard">
                        <%events.forEach(function(event){%>
                            <div class="col-lg-3 col-md-4 col-sm-12">
                                <div class="card" id="card-event">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= event.event_name %>
                                        </h5>
                                        <p class="location">
                                            Location:
                                            <%= event.fullAddress %>
                                        </p>
                                        <p class="date">
                                            Date:
                                            <%= event.date.toDateString() %>
                                        </p>
                                        <!-- Button trigger modal -->
                                        <a class="eventBtn" href="/events/<%=event.id%>">
                                            <button type="button" class="btn btn-primary">More Info</button>
                                        </a>
                                        <% if (event.Volunteers && event.Volunteers.length >= event.volunteers_needed){%>
                                            <button type="button" class="btn btn-primary">Event is Full!</button>
                                            <%}else {%>
                                                <a href='/events/<%= event.id %>/volunteers/new'>
                                                    <button type="button" class="btn btn-primary">Sign Up!</button>
                                                </a>
                                                <% }%>

                                                    <% if (currentUser && currentUser.id === event.UserId){%>
                                                        <a type="button" class="btn btn-primary" href='/events/<%= event.id %>/edit'>Edit Event</a>

                                                        <%}%>
                                    </div>
                                </div>
                            </div>

                            <%})%>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/footer %>