<% include ../partials/head %>
    <% include ../partials/header %>
        <div class="container-volunteer">
            <div class="jumbotron jumbotron-home bg-dark col-12">
                <h1>Volunteer Opportunities</h1>
                <p class="lead">Check out available events around you!</p>
            </div>
        </div>
        <div class="container-events">
            <div class="row-12">
                <div class="col-lg-12">
                    <div class="row row-eventCard">
                        <%events.forEach(function(event){%>
                            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card" id="card-event">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= event.event_name %>
                                        </h5>
                                        <p class="location">
                                            Location:
                                            <%= event.location %>
                                        </p>
                                        <p class="date">
                                            Date:
                                            <%= event.date %>
                                        </p>
                                        <p class="time">
                                            Time:
                                            <%= event.start_time %>
                                        </p>
                                        <p class="time">
                                            Time:
                                            <%= event.end_time %>
                                        </p>
                                        <p class="organizer">
                                            Orazanizer:
                                            <%= event.organizer %>
                                        </p>
                                        <p class="organizer">
                                            Contact:
                                            <%= event.contact%>
                                        </p>
                                        <p class="volunteers">
                                            Volunteers Needed:
                                            <%= event.volunteers_needed %>
                                        </p>
                                        <p class="details">
                                            Info:
                                            <%= event.description %>
                                        </p>
                                        <!-- Button trigger modal -->
                                        <button class="btn btn-primary" type="button"><a href="/events/<%=event.id %>" data-toggle="modal" data-target="#exampleModalLong"></a>More Info</button>
                                        <button class="btn btn-primary" type="button">Sign Up!</button>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <%})%>
                    </div>
                </div>
            </div>
        </div>

        <% include ../partials/footer %>